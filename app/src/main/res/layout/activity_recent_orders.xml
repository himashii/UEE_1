<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="405dp"
            android:layout_height="91dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.75"
            android:background="@drawable/ic_background"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginTop="20px"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="90dp"
                        app:srcCompat="@drawable/ic_cart"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_person"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_menu"
                        tools:ignore="MissingPrefix,VectorDrawableCompat" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="392dp"
            android:layout_height="129dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:alpha="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
            app:srcCompat="@drawable/supermarket" />

        <TextView
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="RECENT ORDERS"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.247" />

        <LinearLayout
            android:id="@+id/buttonLayer"
            android:layout_width="413dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            tools:ignore="MissingConstraints"

            >


            <TextView
                android:id="@+id/newBtn"
                android:layout_width="38dp"
                android:layout_height="43dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_radius"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="New"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/approved"
                android:layout_width="38dp"
                android:layout_height="43dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/redbutton"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="Approved"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/completed"
                android:layout_width="38dp"
                android:layout_height="43dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/redbutton"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="Completed"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="290dp"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="361dp"
            android:background="@drawable/ic_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonLayer"
            app:layout_constraintVertical_bias="0.0">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:alpha="0.75"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </SearchView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Li"
            android:layout_width="394dp"
            android:layout_height="154dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="353dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="372dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="146dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="134dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="20px"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/banana" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="Masala Banana"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="$23.99"
                        android:textAlignment="center"
                        android:textColor="#FF0000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="Qty:1"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/red_button"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="Cansel Order"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="394dp"
            android:layout_height="154dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="353dp"
            app:layout_constraintTop_toBottomOf="@+id/Li"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="372dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="146dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView31"
                        android:layout_width="134dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="20px"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/banana" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView281"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="Masala Banana"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView291"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="$23.99"
                        android:textAlignment="center"
                        android:textColor="#FF0000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView301"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="Qty:1"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView311"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/red_button"
                        android:gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="Cansel Order"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


