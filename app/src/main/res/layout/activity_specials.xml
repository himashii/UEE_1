<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".specials"
    android:background="@drawable/bg">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.75"
        android:background="@drawable/it"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="137dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                app:srcCompat="@drawable/lg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="247dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25px"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:fontFamily="@font/artifika"
                    android:text="LOGIN"
                    android:textColor="@color/colorRed"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="-1dp"
                    android:background="@color/colorRed">

                </View>

                <TextView
                    android:id="@+id/register"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="51px"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="REGISTER"
                    android:fontFamily="@font/artifika"
                    android:textColor="@color/colorRed"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="247dp"
                android:layout_height="51dp"
                android:layout_marginTop="-8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="90dp"
                    app:srcCompat="@drawable/ic_cart"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    app:srcCompat="@drawable/ic_person"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40px"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_menu"
                    tools:ignore="MissingPrefix,VectorDrawableCompat" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="395dp"
        android:layout_height="139dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217"
        app:srcCompat="@drawable/snacks"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="-30dp"
        android:layout_weight="1"
        android:fontFamily="@font/david_libre"
        android:gravity="right"
        android:text="SPECIALS"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout1"
        app:layout_constraintVertical_bias="0.283"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/search"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/search"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout1"
        app:layout_constraintVertical_bias="0.425"
        tools:ignore="MissingConstraints,RtlCompat" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44"
        app:srcCompat="@drawable/ic_baseline_search_24"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="158dp"
        android:background="@drawable/it"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout1"
        app:layout_constraintVertical_bias="0.633">

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/snack1"
                android:layout_width="266dp"
                android:layout_height="123dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/snack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cinzel_decorative"
                        android:paddingLeft="1dp"
                        android:text="Snack"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:paddingLeft="1dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="-2dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/cornerradius"
                        android:text="25%"
                        android:fontFamily="@font/artifika"
                        android:textSize="23dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 150/="
                    android:fontFamily="@font/artifika"
                    android:layout_marginTop="-6dp"
                    android:textColor="#000000"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        app:srcCompat="@drawable/ic_baseline_add_24"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="1"
                        android:textSize="24dp" />

                    <ImageView
                        android:id="@+id/minus"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-14dp"
                        android:layout_marginRight="22dp"
                        android:layout_weight="1"
                        android:paddingRight="30dp"

                        app:srcCompat="@drawable/ic_baseline_minimize_24"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buy"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginTop="-1dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/metal_mania"
                        android:background="@drawable/cornerradius"
                        android:text="BUY NOW"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/cart2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        app:srcCompat="@drawable/ic_cart"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_favorite_24"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="158dp"
        android:background="@drawable/it"
        android:orientation="vertical"
        android:layout_marginTop="470dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout1"
        app:layout_constraintVertical_bias="0.677">

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="266dp"
                android:layout_height="123dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/snack2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/snack2"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1dp"
                        android:text="Snack"
                        android:fontFamily="@font/cinzel_decorative"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/discount2"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:paddingLeft="1dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="-2dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="@font/artifika"
                        android:background="@drawable/cornerradius"
                        android:text="10%"
                        android:textSize="23dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:text="Rs. 180/="
                    android:fontFamily="@font/artifika"
                    android:textColor="#000000"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="30dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_add_24"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="1"
                        android:textSize="24dp" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-14dp"
                        android:layout_marginRight="22dp"
                        android:layout_weight="1"
                        android:paddingLeft="-42dp"

                        app:srcCompat="@drawable/ic_baseline_minimize_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginTop="-1dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/metal_mania"
                        android:background="@drawable/cornerradius"
                        android:text="BUY NOW"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        app:srcCompat="@drawable/ic_cart" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_baseline_favorite_24" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>