<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ShopOnline">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.75"
            android:background="@drawable/ic_background"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginTop="20px"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="247dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25px"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="LOGIN"
                        android:textColor="@color/colorRed"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorRed"></View>

                    <TextView
                        android:id="@+id/register"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="51px"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="REGISTER"
                        android:textColor="@color/colorRed"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="247dp"
                    android:layout_height="51dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="90dp"
                        app:srcCompat="@drawable/ic_cart"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_person"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_menu"
                        tools:ignore="MissingPrefix,VectorDrawableCompat" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="392dp"
        android:layout_height="129dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="476dp"
        android:alpha="0.5"
        app:srcCompat="@drawable/supermarket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />


    <TextView
        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="SHOP ONLINE"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296" />

    <Spinner
        android:id="@+id/Spinner1"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginBottom="368dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_background"
        android:clickable="true"
        android:ems="10"
        android:entries="@array/Spinner_items_country"
        android:gravity="center_horizontal"
        android:hint="Country"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/ic_background"
        android:clickable="true"
        android:layout_marginTop="190dp"
        android:ems="10"
        android:entries="@array/Spinner_items_category"
        android:gravity="center_horizontal"
        android:hint="Category"
        app:layout_constraintTop_toBottomOf="@+id/Spinner1"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/Spinner2"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/ic_background"
        android:clickable="true"
        android:layout_marginTop="245dp"
        android:ems="10"
        android:entries="@array/Spinner_items_subcategory"
        android:gravity="center_horizontal"
        android:hint="Category"
        app:layout_constraintTop_toBottomOf="@+id/Spinner"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/search"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:background="@drawable/redbutton"
        android:fontFamily="@font/metal_mania"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Search"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751" />


</androidx.constraintlayout.widget.ConstraintLayout>