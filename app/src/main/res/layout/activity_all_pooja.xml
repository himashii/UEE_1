<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllPooja"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.75"
            android:background="@drawable/it"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginTop="10px"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="247dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25px"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:fontFamily="@font/artifika"
                        android:text="LOGIN"
                        android:textColor="@color/colorRed"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="-1dp"
                        android:background="@color/colorRed">

                    </View>

                    <TextView
                        android:id="@+id/register"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="51px"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="REGISTER"
                        android:fontFamily="@font/artifika"
                        android:textColor="@color/colorRed"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="247dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="-8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="90dp"
                        app:srcCompat="@drawable/ic_cart"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/ic_person"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_menu"
                        tools:ignore="MissingPrefix,VectorDrawableCompat" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="395dp"
            android:layout_marginTop="20dp"
            android:layout_height="139dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.217"
            app:srcCompat="@drawable/pooja"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/item"
            android:layout_width="155dp"
            android:layout_height="80dp"
            android:layout_marginTop="-110dp"
            android:layout_marginLeft="120dp"
            android:layout_weight="1"
            android:fontFamily="@font/david_libre"
            android:gravity="right"
            android:text="POOJA ITEMS"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout1"
            app:layout_constraintVertical_bias="0.3"
            tools:ignore="MissingConstraints,RtlCompat" />

        <TextView
            android:id="@+id/search"
            android:layout_width="335dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/search"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout1"
            app:layout_constraintVertical_bias="0.425"
            tools:ignore="MissingConstraints,RtlCompat" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.44"
            app:srcCompat="@drawable/ic_baseline_search_24"
            tools:ignore="VectorDrawableCompat" />

        <ListView
            android:id="@+id/list"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1000dp">

        </ListView>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="9dp"
            android:alpha="0.75"
            android:background="@drawable/it"
            android:orientation="horizontal"
            app:layout_constraintBaseline_toBottomOf="@drawable/catb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.991">

            <TextView
                android:id="@+id/about_us"
                android:layout_width="8dp"
                android:layout_height="26dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="ABOUT_US"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:layout_marginTop="7dp"
                android:background="#000000">

            </View>

            <TextView
                android:id="@+id/Contact_us"
                android:layout_width="19dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:paddingLeft="53dp"
                android:text="CONTACT_US"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>