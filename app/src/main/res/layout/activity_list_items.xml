<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListItems"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.75"
            android:background="@drawable/it"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginTop="10px"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="247dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25px"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:fontFamily="@font/artifika"
                        android:text="LOGIN"
                        android:textColor="@color/colorRed"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="-1dp"
                        android:background="@color/colorRed">

                    </View>

                    <TextView
                        android:id="@+id/register"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="51px"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="REGISTER"
                        android:fontFamily="@font/artifika"
                        android:textColor="@color/colorRed"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="247dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="-8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="90dp"
                        app:srcCompat="@drawable/ic_cart"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/ic_person"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_menu"
                        tools:ignore="MissingPrefix,VectorDrawableCompat" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
        android:layout_width="368dp"
        android:layout_height="330dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:alpha="0.75"
        android:background="@drawable/it"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cinzel_decorative"
            android:text="Snack1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/snack" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/artifika"
                android:text="Rs. 150/="
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="32dp"
                app:srcCompat="@drawable/ic_baseline_add_24"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:text="1"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:paddingRight="10dp"
                android:paddingBottom="13dp"
                app:srcCompat="@drawable/ic_baseline_minimize_24"
                tools:ignore="VectorDrawableCompat" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buy"
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="-1dp"
                android:layout_weight="1"
                android:background="@drawable/cornerradius"
                android:fontFamily="@font/metal_mania"
                android:text="BUY NOW"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/cart2"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:paddingLeft="62dp"
                app:srcCompat="@drawable/ic_cart"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/fav"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/ic_baseline_favorite_24"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="245dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/it2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:textSize="17dp"
                android:text="Similar Products"
                android:fontFamily="@font/artifika"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="84dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/snack" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/snack2" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="84dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/snack" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smack 200g Crispy Banana Chips"
                android:textAlignment="center"
                android:fontFamily="@font/david_libre"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Rs. 180/="
                android:fontFamily="@font/artifika"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textStyle="bold" />



            <Button
                android:id="@+id/buy"
                android:layout_width="120dp"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="115dp"
                android:layout_marginBottom="15dp"
                android:textSize="12dp"
                android:fontFamily="@font/metal_mania"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/cornerradius"
                android:text="ADD TO CART"
                android:textColor="#FFFFFF"
                tools:ignore="DuplicateIds" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="9dp"
            android:alpha="0.75"
            android:background="@drawable/it"
            android:orientation="horizontal"
            app:layout_constraintBaseline_toBottomOf="@drawable/catb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.991">

            <TextView
                android:id="@+id/about_us"
                android:layout_width="8dp"
                android:layout_height="26dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="ABOUT_US"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:layout_marginTop="7dp"
                android:background="#000000">

            </View>

            <TextView
                android:id="@+id/Contact_us"
                android:layout_width="19dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:paddingLeft="53dp"
                android:text="CONTACT_US"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>